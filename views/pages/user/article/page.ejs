<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Feed</title>
    <link rel="stylesheet" href="http://localhost:3000/css/bootstrap.min.css">
    <link rel="stylesheet" href="http://localhost:3000/css/one.css">
</head>
<body>
    <%- include("../../../partials/homebar.ejs") %>
    <br>
    <div class="container">
        <% result.articles.rows.forEach(article => { %>
            <div class="card">
                <div class="card-header">
                    <%= article.title %> 
                </div>
                <div class="card-body">
                    <a href="/ler/artigo/<%= article.id %>" class="btn btn-success">Ler artigo</a>
                </div>
            </div>
            <br>
        <% }) %>
        <div class="row">
            <div class="col col-12">
                <% if (result.page == 1) { %>
                    <a href="/" style="float:left" class="btn btn-success">Anterior</a>
                <% } else { %>
                    <a href="/artigos/page/ <%= result.page - 1 %>" style="float:left" class="btn btn-success">Anterior</a>
                <% } %>

                <% if (result.next) { %>
                    <a href="/artigos/page/ <%= result.page + 1 %>" style="float:right" class="btn btn-success">Pr√≥ximo</a>
                <% } %>
            </div>
        </div>
        <br>
    </div>
</body>
</html>